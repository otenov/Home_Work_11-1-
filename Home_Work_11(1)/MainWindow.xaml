<Window x:Class="Home_Work_11_1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_1_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="551*" ></ColumnDefinition>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="199*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="2" Margin="0.333,0,0.334,-0.333">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonView" 
                Content="Просмотр" 
                FontSize="20" 
                Grid.Row="1"
                Click="Button1_Click">

            </Button>
            <Button x:Name="ButtonHide" 
                Content="Скрыть" 
                FontSize="20" 
                Grid.Row="2"
                Click="Button2_Click">
            </Button>
        </Grid>
        <Grid Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,198.334,-0.333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan ="2"  Text="Данные клиента" Margin="10" FontSize="30" HorizontalAlignment="Center" />

            <TextBlock Grid.Row="1"  Text="Фамилия" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock Grid.Row="2"  Text="Имя" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock Grid.Row="3"  Text="Отчество" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock Grid.Row="4"  Text="Номер телефона" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock Grid.Row="5"  Text="Паспорт" Margin="10" FontSize="25" HorizontalAlignment="Center" />

            <TextBlock x:Name="surname" Grid.Row="1" Grid.Column="1"  Text="" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock x:Name="fname" Grid.Row="2" Grid.Column="1"  Text="" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock x:Name="lname" Grid.Row="3" Grid.Column="1"  Text="" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock x:Name="number" Grid.Row="4" Grid.Column="1"  Text="" Margin="10" FontSize="25" HorizontalAlignment="Center" />
            <TextBlock x:Name="pasport" Grid.Row="5" Grid.Column="1"  Text="" Margin="10" FontSize="25" HorizontalAlignment="Center" />
        </Grid>

    </Grid>
</Window>
