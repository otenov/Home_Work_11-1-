<Window x:Class="Home_Work_11_1_.HistoryRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_1_"
        mc:Ignorable="d"
        Title="HistoryRecordWindow" Height="550" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Height="50" Margin="10"/>
            <TextBlock Height="50" Margin="10"/>
            <ListBox x:Name="HistoryRecordList" Height = "350" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="Изменённое поле: "/>
                            <Run Text="{Binding Field}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
