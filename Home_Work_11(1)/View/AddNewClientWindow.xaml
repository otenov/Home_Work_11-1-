<Window x:Class="Home_Work_11_1_.View.AddNewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_1_"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddNewClientWindow" MinHeight="500" MinWidth="500"
        MaxHeight="600" MaxWidth="600"
        Height="500" Width="500">
    <Grid Margin="10">
        <Border CornerRadius="70" Background="Beige">
            <Border.Effect>
                <DropShadowEffect  BlurRadius="25" Color="Gray"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20 15">
                <TextBlock Text="Введите данные клиента"
                       
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
                <TextBox 
                     MaxLength="60"
                     Margin="0 20 0 0 "
                     FontSize="15"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Фамилия"
                     Text="{Binding TextSurname}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     />

                <TextBox
                     MaxLength="40"
                     Margin="0 20 0 0 "
                     FontSize="15"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Имя"
                     Text="{Binding TextFName}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                <TextBox
                     MaxLength="40"
                     Margin="0 20 0 0 "
                     FontSize="15"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Отчество"
                     Text="{Binding TextLName}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     />

                <TextBox
                     MaxLength="11"
                     Margin="0 20 0 0 "
                     FontSize="15"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Телефон"
                     Text="{Binding TextTelephoneNumber}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     />

                <TextBox
                     Margin="0 20 0 0 "
                     MaxLength="11"
                     FontSize="15"
                     HorizontalAlignment="Center"
                     materialDesign:HintAssist.Hint="Паспорт"
                     Text="{Binding TextPassport}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     />
                <StackPanel Margin="0 15" Orientation="Horizontal" HorizontalAlignment="Center">
                    
                    <Button Margin="5 7" Width="110" materialDesign:ButtonAssist.CornerRadius="10" Content="Назад" 
                            Command="{Binding ButtonBackClickCommand}"/>
                    <Button Margin="5 7" Width="110" materialDesign:ButtonAssist.CornerRadius="10" Content="Ок" 
                            Command ="{Binding ButtonOkClickCommand}"/>
                    
                </StackPanel>

            </StackPanel>

        </Border>


    </Grid>
</Window>
