<Window x:Class="Home_Work_11_1_.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_11_1_"
        mc:Ignorable="d"
        Title="RecordWindow" Height="220" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Height="40" Margin="15 15 15 0" FontSize="20">
                <Run Text="Название поля: " />
                <Run x:Name="Field" TextDecorations="Underline" />
            </TextBlock>
            <TextBlock Height="40" Margin="15 15 15 0" FontSize="20">
                <Run Text="Прошлое значение: " />
                <Run x:Name="PreviousValue" TextDecorations="Underline" />
            </TextBlock>
            
            <TextBlock Height="40" Margin="15 15 15 0" FontSize="20">
                <Run Text="Новое значение: " />
                <Run x:Name="NewValue" TextDecorations="Underline" />
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
